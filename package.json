{
  "name": "sobani-workspace",
  "version": "1.0.0",
  "description": "多目的プロジェクト管理ワークスペース",
  "private": true,
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "calendar:build": "cd projects/calendar-gas && npm run build",
    "calendar:push": "cd projects/calendar-gas && npm run push",
    "calendar:watch": "cd projects/calendar-gas && npm run watch",
    "medical:setup": "cd projects/medical-supplies-appsheet && bash scripts/setup.sh",
    "medical:backup": "cd projects/medical-supplies-appsheet && bash scripts/backup.sh",
    "medical:deploy": "cd projects/medical-supplies-appsheet && bash scripts/deploy.sh",
    "install:all": "npm install && npm run install:calendar",
    "install:calendar": "cd projects/calendar-gas && npm install",
    "build:all": "npm run calendar:build",
    "lint:all": "echo 'Linting all projects...' && npm run lint:calendar",
    "lint:calendar": "cd projects/calendar-gas && npm run lint || echo 'No lint script found'",
    "clean": "rm -rf node_modules && rm -rf projects/*/node_modules"
  },
  "keywords": [
    "google-apps-script",
    "appsheet",
    "medical-supplies",
    "calendar-sync",
    "typescript"
  ],
  "author": "sobani development team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  }
}